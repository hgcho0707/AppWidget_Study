<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppWidget_Study" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppCompat.NoActionbar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="main_text_style" parent="TextAppearance.AppCompat">
        <item name ="android:textSize">@dimen/size_energy_maintext_22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_energy_maintext</item>
    </style>

    <style name="energy_text_style" parent="TextAppearance.AppCompat">
        <item name ="android:textSize">@dimen/size_energy_datatext_30sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_appbar_bg</item>
    </style>

    <style name="energy_unit_text_style" parent="TextAppearance.AppCompat">
        <item name ="android:textSize">@dimen/size_energy_unit_text_20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_energy_maintext</item>
    </style>

    <!--EnergyTab 내부 Text 속성 지정 Style-->
    <style name="energy_tab_text" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name ="android:textSize">@dimen/size_energy_tabs_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--MainTab 내부 Text 속성 지정 Style-->
    <style name="main_tab_text" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name ="android:textSize">@dimen/size_main_tabs_22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">@dimen/height_main_tabs_54dp</item>
        <item name="android:shadowColor">@color/color_tab_shadow</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
    </style>


    <!-- source -->
    <style name="SubTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMinWidth">@dimen/energy_metering_sub_tab_width</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorColor">#23A696</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <!--<item name="android:shadowColor">#802c9b8e</item>-->
        <!--<item name="android:shadowDx">6.123031769111886e-17</item>-->
        <!--<item name="android:shadowDy">1</item>-->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="tabTextStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/main_tab_text_size</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:textColor">@color/color_default_text</item>
        <item name="android:textSize">@dimen/average_head_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ValueTextStyle">
        <item name="android:textColor">@color/color_default_text</item>
        <item name="android:textSize">@dimen/average_head_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ContentTextStyle">
        <item name="android:textColor">@color/color_default_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DateTextStyle">
        <item name="android:textColor">@color/color_default_text</item>
        <item name="android:textSize">26sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SubTitleTextStyle">
        <item name="android:textColor">@color/color_default_text</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LegendTextStyle">
        <item name="android:textColor">@color/color_default_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="KeyPadTextStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogHeaderTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogContentTextStyle">
        <item name="android:textColor">#6e6e6e</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogBtnTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogConfirmTextStyle">
        <item name="android:textColor">@drawable/btn_dialog_confirm_selector</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="energyTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/widget_main_view_type_text_size</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="energyTitleTextStyle">
        <item name="android:textColor">@color/color_default_text</item>
        <item name="android:textSize">@dimen/energy_metering_use_title_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="energyValueTextStyle">
        <item name="android:textColor">@color/color_goal_text</item>
        <item name="android:textSize">@dimen/energy_metering_use_value_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="energyUnitTextStyle">
        <item name="android:textColor">@color/color_default_text</item>
        <item name="android:textSize">@dimen/energy_metering_use_unit_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="energyNoticeTextStyle">
        <item name="android:textColor">@color/color_notice_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="Co2GraphTextStyle">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/co2_emission_default_text_size</item>
    </style>

    <style name="Co2GraphNoticeTextStyle">
        <item name="android:textColor">@color/color_goal_text</item>
        <item name="android:textSize">@dimen/co2_emission_default_text_size</item>
    </style>
    <style name="Co2GraphTreeNoticeTextStyle">
        <item name="android:textColor">@color/color_tree_notice_text</item>
        <item name="android:textSize">@dimen/co2_emission_default_text_size</item>
    </style>
    <style name="RealDataTitleTextStyle">
        <item name="android:textColor">@color/color_black_50_data</item>
        <item name="android:textSize">@dimen/energy_metering_title_data_text_size</item>
    </style>
    <style name="FixDataTextStyle">
        <item name="android:textColor">@color/color_black_30_data</item>
        <item name="android:textSize">@dimen/energy_metering_fix_data_text_size</item>
    </style>
    <style name="UnitTextStyle">
        <item name="android:textColor">@color/color_black_50_data</item>
        <item name="android:textSize">@dimen/energy_metering_use_unit_text_size</item>
    </style>
    <style name="RealDataTextStyle">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/energy_metering_fix_data_text_size</item>
    </style>
</resources>